<%= form_for @post do |f|%>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@post.errors.count, "error") %> prohibited
        this post from being saved:
      </h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :body%> <br>
  <%= f.text_area :body,rows: "6", class: 'form-control', onkeyup: "textAreaAdjust(this)"%><br>
  <%= f.label :images %><br>
  <%= f.file_field :images, multiple: true %><br><br>
  <%= f.submit class: 'btn btn-sm btn-primary mt-2' %><br>
<% end %>

<script>
    function textAreaAdjust(element) {
        element.style.height = "1px";
        element.style.height = (25+element.scrollHeight)+"px";
    }
</script>