<h1>hello, world</h1>


<% if user_signed_in? %>
    <%= link_to 'Edit Profile',edit_user_registration_path, class: "btn btn-sm btn-primary" %>
    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-sm btn-primary"%>
<% else %>
    <%= link_to 'Sign In', new_user_session_path, class: "btn btn-sm btn-primary"%>
    <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-sm btn-primary"%>
<% end %>
<% if current_user %>
<div>
    <%= image_tag user_avatar(current_user, 100), class: 'rounded-circle', style: "width:100px; height:100px" %>
</div>
<%end%>